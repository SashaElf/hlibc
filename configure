#!/bin/sh

# hlibc configure script

print()
{
	printf -- "%s\n" "$*"
}

menu()
{
print "hlibc 2016-2018, CM Graff et al.

	--prefix=PREFIX         main installation prefix [/usr/local/hlibc] 
"
exit 0
}

fatal()
{
        (>&2 print "fatal" "$*")
        exit 1
}

detectcommand()
{
        printf "trying $i .. "
        if command -v "$1" >/dev/null 2>&1
        then    print "yes"
                return 0
        else    print "no"
                return 1
        fi
}

inspect_compiler()
{
	printf "trying %s .. " "$2"
	print "long y = 1;" > "$temporary_file"
	print "double z = 0;" >> "$temporary_file"
	if "$CC" "$2" -c -o .temporary "$temporary_file" 2> .temporary
	then	print "yes"
		eval "$1=\"\${$1} \$2\""
		eval "$1=\${$1# }"
		return 0
	else	print "no"
		return 1
	fi
}

CFLAGS_C99FSE=
CFLAGS_AUTO=
prefix="/usr/local/hlibc"
architecture=

for i in "$@"
do	case "$i" in
		--help)
			menu
			;;
		--prefix=*)
			prefix=${i#*=}
			;;
		--* )
			fatal "$i not recognized!!"
			;;
		CC=*)
			CC=${i#*=}
			;;
		CFLAGS=*)
			CFLAGS=${i#*=}
			;;
		CPPFLAGS=*)
			CPPFLAGS=${i#*=}
			;;
		*)
			fatal "$i is not a valid option !!"
			;;
	esac
done

# extrapolate the installation prefix
exec_prefix="${prefix}"
binaries="${prefix}/bin"
libraries="${prefix}/lib"
includes="${prefix}/include"
syslibraries="/lib"

# tempfile
temporary_file="./temporary_work_file"
[ -f "${temporary_file}" ] && rm "$temporary_file"

print "Attempting to detect a C compiler ..."
if [ -z "${CC}" ]
then    for i in unlikely-cc c99 gcc cc clang pcc tcc
        do      if detectcommand "$i"
                then    CC="$i"
                        break
                fi
        done
        if [ -z "${CC}" ]
        then    fatal "No compiler was able to be found. Giving up."
        fi
else    detectcommand "${CC}"
fi

# Find target architecture
printf "Automatically detecting the computer architecture: "
architecture=$("$CC" -dumpmachine 2>/dev/null)
print "$architecture"

case "$architecture" in
	arm*)
		ARCH="arm"
		;;
	aarch64*)
		ARCH="aarch64"
		;;
	i*86*)
		ARCH="i386"
		;;
	x86_64*)
		ARCH="x86_64"
		;; 
	*)
		fatal "Unknown architecture !!"
		;;
esac

# Obtain a freestanding C99 env
inspect_compiler CFLAGS_C99FSE -ffreestanding
inspect_compiler CFLAGS_C99FSE -std=c99
inspect_compiler CFLAGS_C99FSE -nostdinc
inspect_compiler CFLAGS_AUTO -pipe
inspect_compiler CFLAGS_AUTO -Os

# nasty i486 hack
if test "$ARCH" = "i386"
then	inspect_compiler CFLAGS_AUTO -march=i486
	inspect_compiler CFLAGS_AUTO -mtune=generic
fi

# correct broken compiler installations
inspect_compiler CFLAGS_AUTO -fno-stack-protector
inspect_compiler DISABLE_PIE -fno-pie
inspect_compiler DISABLE_PIE -no-pie

# create the config.mak
print "Generating a config.mak for the main Makefile"

print "
# Automatically generated
ARCH = $ARCH
prefix = $prefix
exec_prefix = $exec_prefix
binaries = $binaries
libraries = $libraries
includes = $includes
syslibraries = $syslibraries
CC = $CC
CFLAGS = $CFLAGS_AUTO $CFLAGS
CFLAGS_C99FSE = $CFLAGS_C99FSE
DISABLE_PIE = $DISABLE_PIE
" > config.mak

# Adjust the compiler wrapper if clang is being used
case "$CC" in
	*clang*)
		print "CC_IS_CLANG = yes" >> config.mak
		print "" >> config.mak
		;;
esac

# clean up and report
rm "$temporary_file" .temporary

print "done"

